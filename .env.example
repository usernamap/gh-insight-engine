# Database Configuration
# MongoDB connection string (local or cloud)
DATABASE_URL=mongodb://localhost:27017/github_insight_engine

# GitHub API Configuration
# GitHub Classic Token with required scopes: repo, user, read:org
GH_TOKEN=your_github_classic_token_here
GITHUB_USERNAME=your_github_username
GITHUB_FULL_NAME=Your Full Name

# OpenAI Configuration
# OpenAI API key for AI analysis features
OPENAI_API_KEY=your_openai_api_key_here

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Security
# Secret key for JWT token generation and validation
JWT_SECRET=your_jwt_secret_key_here

# Automatic Scheduling Configuration (Optional)
# Enable automatic data refresh scheduling
SCHEDULE_ENABLED=false
# Scheduling frequency: daily, weekly, monthly
SCHEDULE_FREQUENCY=weekly
# Execution time in 24h format (HH:MM)
SCHEDULE_TIME=02:00
# Timezone for execution (IANA timezone format)
SCHEDULE_TIMEZONE=Europe/Paris
# Authentication token for scheduling service
SCHEDULE_AUTH_TOKEN=

# Rate Limiting Configuration
# Maximum requests per minute per IP
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL=info
# Log file path (optional)
LOG_FILE=app.log

# CORS Configuration
# Allowed origins for CORS (comma-separated)
CORS_ORIGIN=*

# Security Configuration
# Enable HTTPS redirect (production only)
HTTPS_REDIRECT=false
# Trust proxy for rate limiting
TRUST_PROXY=false

# Development Configuration
# Enable detailed error messages (development only)
DETAILED_ERRORS=false
# Enable API documentation
ENABLE_DOCS=true
# Enable health check endpoint
ENABLE_HEALTH_CHECK=true

# Testing Configuration
# Test database URL (for integration tests)
TEST_DATABASE_URL=mongodb://localhost:27017/test_github_insight_engine
# Test environment flag
NODE_ENV_TEST=test

# Monitoring Configuration
# Enable performance monitoring
ENABLE_MONITORING=false
# Monitoring endpoint (if applicable)
MONITORING_ENDPOINT=

# Cache Configuration
# Enable response caching
ENABLE_CACHE=false
# Cache TTL in seconds
CACHE_TTL=300

# File Upload Configuration
# Maximum file upload size in bytes
MAX_FILE_SIZE=10485760

# Session Configuration
# Session secret for secure sessions
SESSION_SECRET=your_session_secret_here
# Session timeout in milliseconds
SESSION_TIMEOUT=86400000

# Email Configuration (if needed)
# SMTP host for email notifications
SMTP_HOST=
# SMTP port
SMTP_PORT=587
# SMTP username
SMTP_USER=
# SMTP password
SMTP_PASS=
# Email from address
EMAIL_FROM=

# External Services Configuration
# GitHub API base URL (for enterprise)
GITHUB_API_BASE_URL=https://api.github.com
# OpenAI API base URL
OPENAI_API_BASE_URL=https://api.openai.com/v1

# Feature Flags
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
# Enable beta endpoints
ENABLE_BETA_ENDPOINTS=false

# Performance Configuration
# Enable compression
ENABLE_COMPRESSION=true
# Enable request logging
ENABLE_REQUEST_LOGGING=true
# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Database Connection Pool
# Maximum database connections
DB_POOL_MAX=10
# Minimum database connections
DB_POOL_MIN=2
# Database connection timeout
DB_CONNECTION_TIMEOUT=30000

# API Versioning
# Current API version
API_VERSION=v1
# Enable API versioning
ENABLE_API_VERSIONING=true

# Documentation Configuration
# Enable Swagger UI
ENABLE_SWAGGER_UI=true
# API documentation title
API_TITLE=GitHub Insight Engine API
# API documentation description
API_DESCRIPTION=API REST for deep analysis of GitHub data with AI insights

# Health Check Configuration
# Health check timeout
HEALTH_CHECK_TIMEOUT=5000
# Enable detailed health checks
ENABLE_DETAILED_HEALTH_CHECKS=false

# Error Reporting Configuration
# Enable error reporting
ENABLE_ERROR_REPORTING=false
# Error reporting service URL
ERROR_REPORTING_URL=

# Backup Configuration
# Enable automatic backups
ENABLE_BACKUPS=false
# Backup frequency in hours
BACKUP_FREQUENCY=24
# Backup retention days
BACKUP_RETENTION_DAYS=30

# Notification Configuration
# Enable notifications
ENABLE_NOTIFICATIONS=false
# Notification webhook URL
NOTIFICATION_WEBHOOK_URL=

# Analytics Configuration
# Enable usage analytics
ENABLE_ANALYTICS=false
# Analytics service URL
ANALYTICS_URL=

# Development Tools
# Enable hot reload (development only)
ENABLE_HOT_RELOAD=false
# Enable debug mode
DEBUG=false
# Debug port
DEBUG_PORT=9229
